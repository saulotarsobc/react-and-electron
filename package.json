{
  "name": "frontend",
  "version": "0.1.0",
  "private": false,
  "main": "main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run start:react\" \"npm run start:electron\"",
    "start": "concurrently \"npm run start:react\" \"npm run start:electron\"",
    "build": "npm run clean && npm run build:frontend && npm run build:backend",
    "clean": "rimraf main build",
    "start:react": "react-scripts start",
    "start:electron": "npm run build:backend && electron . --dev",
    "build:frontend": "react-scripts build",
    "build:backend": "npx tsc -p backend",
    "dist": "npm run build && npx electron-builder"
  },
  "dependencies": {
    "@types/node": "^16.18.95",
    "@types/react": "^18.2.75",
    "@types/react-dom": "^18.2.24",
    "electron-store": "^8.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^29.2.0",
    "electron-builder": "^24.13.3",
    "rimraf": "^5.0.5"
  },
  "build": {
    "productName": "SC - Electron Typescript Next",
    "appId": "electron-typescript-next",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./build/logo192.png",
      "publish": [
        "github"
      ],
      "publisherName": "Saulo INC",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "./build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "asar": true,
    "files": [
      "main",
      "build"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}